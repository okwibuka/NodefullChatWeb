<html lang="en">
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" 
href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="../css/change_password.css">
<link rel="stylesheet" href="../css/statics.css">
<title>change_password</title>
</head>
<body>
<%- include('../static_pages/_header.ejs') %>
<div class="section">
<div class="container">
<%- include('../static_pages/_left.ejs') %>
<div class="center">
<div class="container">

<div class="box_one">
<center>
<%if(user.image){%>
<img src="../profile_images/<%= user.image %>" alt="profile">
<%}else{%> 
<img src="../profile_images/default.jpg" alt="profile">
<%}%>
<div class="names">
<%= user.first_name %>&nbsp; <%= user.last_name %>
</div>
</center>
</div>


<div class="box_two">
<center>
<div>

</div>
</center>

<div class="top">
<ul>
<li><a href="/my_profile/<%= user.slug %>">Over View</a></li>
<li><a href="/edit_profile/<%= user.slug %>">Edit Profile</a></li>
<li><a href=""style="color:blue;">Change Password</a></li>
</ul>
</div>

<div class="bottom">

<form action="/user/change_password" method="post">
<center>
<span style='color:red'>
<% if(typeof errors != 'undefined'){ %>
<% errors.forEach(error => { %>
<div style="color: red; text-align: center; ">
<%= error.msg %>
</div>
<% }) %>
<% } %>    
</span>

</center>

<div>
<label for="old_password">Current Password:</label>
<input type="password" name="old_password">
</div>
<div>
<label for="new_password">New Password:</label>
<input type="password" name="new_password">
</div>
<div>
<label for="confirm_password">Confirm Password:</label>
<input type="password" name="confirm_new_password">
</div>
<center>
<button name="submit">Change Password</button>
</center>
</form>
</div>

</div>
</div>
</div>
</div>
</div>

</body>
</html>