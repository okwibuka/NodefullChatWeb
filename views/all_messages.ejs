

<html lang="en">
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" 
href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="css/all_messages.css">
<link rel="stylesheet" href="/css/statics.css">
<title>all messages</title>
</head>
<body>

<%- include('../static_pages/_header.ejs') %>
<div class="section">
<div class="container">
<%- include('../static_pages/_left.ejs') %> 


<div class="center">
<div class="content">

<div class="messages_container">

<%if(messages.length > 0){%>
<% messages.forEach(message=>{
%>

<div class="auth">


<div>
<%if(message.sender_profile){%>
<img src="../profile_images/<%= message.sender_profile %>" alt="profile" 
class="message_sender_img">
<%}else{%> 
<img src="../profile_images/default.jpg" alt="profile" 
class="message_sender_img">
<%}%>
</div>
<a href="/messages/<%= message.sender_id %>">
<div class="context">
<p><%= message.sender_last_name %>&nbsp;<%= message.sender_first_name %></p>
<div class="message">
<small><%= message.message %></small>
</div>
</div>
</a>

</div>

<% }) %>
<%}else{%>
<center>
<p style="color: red;">no message found!</p>
</center>
<%}%>
</div>

</div>
</div> 





<!-- ----------------------------------------right side-------------------------------------- -->
<div class="right">
<div class="container">


<div class="box_two">
<div class="container">

<div class="loged_users">


<% users.forEach(user =>{ %>


<div class="bottom">
<a href="/messages/<%= user.id %>">
<%if(user.image){%>
<img src="../profile_images/<%= user.image %>" alt="profile" 
>
<%}else{%> 
<img src="../profile_images/default.jpg" alt="profile" 
>
<%}%>
<p><%= user.last_name %> &nbsp;<%= user.first_name %>
</a>
</p>

    </div>
    <% }) %>

</div>

</div>
</div>
</div>
</div>

</div>
</div>

</body>
</html>