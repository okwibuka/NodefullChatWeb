<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/news.css">
    <title>news</title>
</head>
<body>
    <%- include('../static_pages/_header.ejs') %>
    <div class="section">
        <div class="container">
            <%- include('../static_pages/_left.ejs') %>

            <div class="center">
                <div class="container">
                
                <div class="box_one box_one_news">

                    <%if(updates.length > 0){%>
                    <% updates.forEach(update =>{
                        %>
                    
                        <div class="card box_news_container">
                        <div class="card_title">
                        <i class="bi bi-newspaper"></i>
                        <p>date</p> 
                        </div>
                        <div class="card_body">
                            <img src="../news_images/<%= update.image %>">
                            <a href="/news_view/<%= update.slug %>"><p><%= update.title %>
                            </p></a>
                        </div>
                    </div> 
                    
                          <% }) 
                          %>
                          <%}else{%>
                            <center><p style="color:red">no news found!</p></center>
                        <%}%>
                   

                </div>
                </div>
                </div>

        </div>
    </div>
    
</body>
</html>